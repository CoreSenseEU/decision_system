<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <!-- Accept Meta -->
  <BehaviorTree ID="MakeSureChoiceAccepted">
    <!-- Check if already accepted -->
    <Sequence _successIf="accepted">
      <SubTree ID="MakeSureChoiceTaken" _autoremap="true" />
      <SubTree ID="MakeSureAlternativesEvaluated" _autoremap="true" />
      <Accept choice="{choice}"
              evaluation="{evaluation}"
              accepted="{accepted}"
              action_name=""/>
    </Sequence>
  </BehaviorTree>
</root>
