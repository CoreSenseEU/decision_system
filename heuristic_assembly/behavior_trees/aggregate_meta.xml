<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <!-- Aggregate Meta -->
  <BehaviorTree ID="MakeSureAlternativesEvaluated">
    <Sequence>
      <RunOnce>
        <Script code="_last_updated_iteration := -1" />
      </RunOnce>

      <Sequence _successIf="_last_updated_iteration > iteration">
        <SubTree ID="MakeSureAlternativesAssessed" _autoremap="true" />
        <Aggregate assessments="{assessments}"
                   evaluation="{evaluation}"
                   action_name=""/>
        <Script code="_last_updated_iteration = iteration" />
      </Sequence>
    </Sequence>
  </BehaviorTree>
</root>
