<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <!-- Update Alternatives Structure 
      NOTE: This could be a more complex behavior tree depending on the heuristic
      or memory implementations.
  -->
  <BehaviorTree ID="MakeSureAlternativesUpdated">
    <Sequence>
      <!-- NOTE: if either the previous choice or choice set are uninitialized, 
            this assumes it is the first iteration -->
      <UpdateAlternatives gap="{gap}"
                          previous_choice="{previous_choice}"
                          choice_set="{choice_set}"
                          action_name="" />
    </Sequence>
  </BehaviorTree>
</root>
