<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <!-- Update Cues Structure 
      NOTE: This could be a more complex behavior tree if deciding on cues -->
  <BehaviorTree ID="MakeSureCuesUpdated">
    <Sequence>
      <!-- <RunOnce> -->
      <!--   <Script code="_last_updated_iteration := -1" /> -->
      <!-- </RunOnce> -->

      <!-- NOTE: without a new decision on cues (see reconfiguration), it is
            only sensible to keep all or none of the cues each iteration.

            Assume that the ordering of cues matches the order in which they
            were discovered, but this ordering could be enforced by the 
            definition of `cue_of/2`.
      -->
      <!-- <Sequence _successIf="_last_updated_iteration > iteration"> -->
        <!-- NOTE: if cues is uninitialized, this assumes it is the first iteration -->
        <UpdateCues gap="{gap}"
                    cues="{cues}"
                    action_name="" />
      <!--   <Script code="_last_updated_iteration = iteration" /> -->
      <!-- </Sequence> -->
    </Sequence>
  </BehaviorTree>
</root>
