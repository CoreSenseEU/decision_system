<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="DecisionCore">
  <Sequence> <!-- _failureIf="alternatives == '[]' | cues == '[]'" -->
      <Assess alternatives="{alternatives}"
              cues="{cues}"
              assessments="{assessments}"/>
      <Aggregate assessments="{assessments}"
                 evaluation="{evaluation}"/>
      <Order evaluation="{evaluation}"
             ordering="{ordering}"/>
      <Take ordering="{ordering}"
            choice="{choice}"/>
      <Accept choice="{choice}"
              accepted="{accepted}"/>
    </Sequence>
  </BehaviorTree>

  <TreeNodesModel>
    <SubTree ID="DecisionCore">
      <input_port name="alternatives"/>
      <input_port name="cues"/>
      <output_port name="choice"/>
      <output_port name="accepted"/>
    </SubTree>
  </TreeNodesModel>
</root>
