<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="DecideOnGraphRoute">
    <Sequence>
      <GetDropLocations name="get_drop_locations" />
      <PrologToROSInterface name="get_untidied_doorway_object_drop_pose" 
                            query="has_drop({doorway_object}, D), has_pose(D, P), has_coordinates_7d(P, X, Y, _, _, _, _, _)"
                            interface="geometry_msgs::msg::Pose"
                            mapping="[('X', 'pose.position.x'), ('Y', 'pose.position.y')]"
                            output="{drop_pose}"
      />
      <NavigateToPose name="navigate_to_held_object_drop_location_pose" goal="{drop_pose}"/>
      <PlaceObject name="place_object" />
    </Sequence>
  </BehaviorTree>
</root>
